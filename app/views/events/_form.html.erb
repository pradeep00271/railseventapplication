<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :event_name %>
    <%= form.text_field :event_name,class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :event_description %>
    <%= form.text_area :event_description,class:"form-control" %>
  </div></br>

  <div class="field form-group">
    <%= form.label :start_date %>
    <%= form.date_select :start_date,class:"form-control" %>
  </div></br>

  <div class="field form-group">
    <%= form.label :end_date %>
    <%= form.date_select :end_date,class:"form-control" %>
  </div></br>

  <div class="field form-group">
    <%= form.label :city %>
    <%= form.text_field :city,class:"form-control" %>
  </div></br>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
