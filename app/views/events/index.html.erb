<h1>Events List</h1>
<div class="row">
  <div class="col">
<%=  form_tag events_path, :method => 'get' do %>
  <%= label_tag :event_name, "Enter Event Name to search: " %>
      <%= text_field_tag :event_name %></div>
    <div class="col">
    <%= label_tag :event_description, "Enter Event Description to search: " %>
      <%= text_field_tag :event_description %></div>
     <div class="col">
    <%= label_tag :start_date, "Select Start Date to search: " %>
       <%= date_field_tag :start_date %></div>

    <div class="col">
    <%= label_tag :end_date, "Select End Date to search: " %>
      <%= date_field_tag :end_date %></div>
    <div class="col">
    <%= label_tag :city, "Enter City to search: " %>
      <%= text_field_tag :city %></div>
    <div class="col">
      <%= submit_tag "Search",class:"btn btn-primary" %>
      <span style="padding-left:10px;"><%= link_to 'Reset', events_path,class:"btn btn-primary" %></span></div>


  <% end %>




</div>
</br>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Event name</th>
      <th>Event description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>City</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

    <% @events.each do |event| %>
    
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.event_description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.city %></td>
        <td><%= event.user.name if event.user %></td>
        <td><%= link_to 'Show', event,class:"btn btn-primary" %></td>
        <% if user_signed_in? && (current_user == event.user || current_user.admin?) %>
        
        <td><%= link_to 'Edit', edit_event_path(event),class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-primary" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path,class:"btn btn-secondary" %>
